@page
@model RegisterModel
@{
    ViewData["Title"] = "Inscription";
}

<div class="row">
    <div class="col-md-12">
        <section>
            <div class="login-clean">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="sr-only">Inscription</h2>
                    <div class="illustration"><i class="icon ion-ios-navigate"></i></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input class="form-control" type="email" placeholder="Email" autocomplete="username" asp-for="Input.Email" aria-required="true">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" placeholder="Mot de passe" autocomplete="new-password" asp-for="Input.Password" aria-required="true">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" placeholder="Confirmer mot de passe" autocomplete="new-password" asp-for="Input.ConfirmPassword" aria-required="true">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit" id="registerSubmit">Valider mon inscription</button>
                        </div>
                </form>
            </div>
        </section>

