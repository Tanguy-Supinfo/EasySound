@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Mot de passe oublié ?";
}

<div class="row">
    <div class="col-md-12">
        <section>
            <div class="login-clean">
                <form method="post">
                    <h2 class="sr-only">Récupérer votre compte</h2>
                    <div class="illustration"><i class="icon ion-ios-navigate"></i></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input class="form-control" type="email" name="email" placeholder="Email" asp-for="Input.Email" aria-required="true">
                        </div>
                    <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Récupérer</button></div>
                </form>
            </div>
        </section>

